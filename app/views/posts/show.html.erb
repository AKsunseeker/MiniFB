<!-- post show -->

<h1>Post</h1>

<p><%= @post.content %></p>
<br />

<%= link_to 'Edit Post', edit_post_path(@post, user_id: @post.user_id) %> | 
<%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: "Rwwwweeewwwie you want to delete this post?"} %>
<% @comments.each do |comment| %>
  <p><%= "#{@user.first_name} #{@user.last_name} \"#{comment.opinion}\" "%></p>
  <%= link_to 'Edit Comment', edit_comment_path(comment, post_id: @post.id, user_id: @user.id) %> | 
  <%= link_to 'Delete Comment', comment_path(comment, post_id: @post.id, user_id: @user.id), method: :delete, data: {confirm: "Rwwwweeewwwie you want to delete this post?"}%>
<% end %>
<br />
<%= link_to 'Make a Comment', new_comment_path(post_id: @post.id, user_id: @user.id) %>








